{
  "manifest_version": 3,
  "name": "Tab Usage Tracker",
  "version": "1.0",
  "description": "Tracks and displays tab usage statistics.",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.jpg",
      "128": "icons/icon128.jpg"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.jpg",
    "128": "icons/icon128.jpg"
  }
}
